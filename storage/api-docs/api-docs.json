    "components": {
        "schemas": {
            "StoreCommentRequest": {
                "title": "Store Comment Request",
                "required": [
                    "article_id",
                    "is_anonymous",
                    "text"
                ],
                "properties": {
                    "article_id": {
                        "description": "Article ID",
                        "type": "integer",
                        "example": 15
                    },
                    "is_anonymous": {
                        "description": "Is comment anonymous",
                        "type": "boolean",
                        "example": true
                    },
                    "text": {
                        "description": "Comment text",
                        "type": "string",
                        "maxLength": 255,
                        "example": "This is a comment text"
                    }
                },
                "type": "object"
            },
            "UpdateCommentRequest": {
                "title": "Update Comment Request",
                "required": [
                    "text"
                ],
                "properties": {
                    "text": {
                        "description": "Comment text",
                        "type": "string",
                        "maxLength": 255,
                        "example": "This is a comment text"
                    }
                },
                "type": "object"
            },
            "CommentResource": {
                "title": "Comment Resource",
                "description": "Single comment data structure",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 101
                    },
                    "text": {
                        "type": "string",
                        "example": "This is a great article!"
                    },
                    "is_anonymous": {
                        "type": "boolean",
                        "example": false
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-08-30T14:12:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-09-01T10:45:00Z"
                    },
                    "article_id": {
                        "type": "integer",
                        "example": 15
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 5
                    },
                    "is_modified": {
                        "description": "True if the comment was updated after creation",
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Enter your Bearer Token",
